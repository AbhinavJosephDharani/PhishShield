{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    { 
      "source": "/api/:path*", 
      "destination": "/backend/server.js"
    },
    {
      "source": "/assets/:path*",
      "destination": "/frontend/dist/assets/:path*"
    },
    {
      "source": "/:path*",
      "destination": "/frontend/dist/index.html"
    }
  ]
} 